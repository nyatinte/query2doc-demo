{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "indentStyle": "space"
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "warn"
      },
      "suspicious": {
        "noImplicitAnyLet": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn"
      }
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "parser": { "allowComments": true }
  }
}
